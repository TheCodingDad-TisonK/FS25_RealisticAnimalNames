<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="105">
    <author>YourName</author>
    <version>2.0.0.0</version>
    <title>
        <en>Realistic Animal Names</en>
        <de>Realistische Tiernamen</de>
        <fr>Noms d'Animaux Réalistes</fr>
        <pl>Realistyczne Nazwy Zwierząt</pl>
        <es>Nombres Realistas para Animales</es>
        <it>Nomi Animali Realistici</it>
        <cz>Realistická Jména Zvířat</cz>
        <br>Nomes Realistas de Animais</br>
        <uk>Реалістичні Імена Тварин</uk>
        <ru>Реалистичные Имена Животных</ru>
    </title>

    <description>
        <en><![CDATA[Add custom names to your animals with floating name tags. Features include:
• Custom name input for each animal
• Floating name tags above animals
• Toggle visibility in settings
• Per-savegame storage
• Keybind support (default: K)
• MP compatible]]></en>
        <de><![CDATA[Fügen Sie Ihren Tieren benutzerdefinierte Namen mit schwebenden Namensschildern hinzu.]]></de>
        <fr><![CDATA[Ajoutez des noms personnalisés à vos animaux avec des étiquettes flottantes.]]></fr>
    </description>

    <iconFilename>icon.dds</iconFilename>
    <multiplayer supported="true"/>

    <!-- Settings -->
    <settings>
        <setting name="showNames" title="ran_setting_showNames" type="bool" default="true" />
        <setting name="nameDistance" title="ran_setting_nameDistance" type="float" default="15" min="5" max="50" />
        <setting name="nameHeight" title="ran_setting_nameHeight" type="float" default="1.8" min="0.5" max="3.0" />
        <setting name="fontSize" title="ran_setting_fontSize" type="float" default="0.018" min="0.010" max="0.030" />
    </settings>

    <!-- Input Actions -->
    <actions>
        <action name="RAN_OPEN_UI" category="VEHICLE" axisType="HALF" />
    </actions>

    <inputBinding>
        <actionBinding action="RAN_OPEN_UI">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_k" />
        </actionBinding>
    </inputBinding>

    <!-- Localization -->
    <l10n>
        <!-- Settings -->
        <text name="ran_setting_showNames">
            <en>Show Animal Names</en>
            <de>Tiernamen anzeigen</de>
            <fr>Afficher les noms des animaux</fr>
        </text>
        <text name="ran_setting_nameDistance">
            <en>Name Display Distance</en>
            <de>Namensschildabstand</de>
            <fr>Distance d'affichage des noms</fr>
        </text>
        <text name="ran_setting_nameHeight">
            <en>Name Height Above Animal</en>
            <de>Namensschildhöhe über dem Tier</de>
            <fr>Hauteur du nom au-dessus de l'animal</fr>
        </text>
        <text name="ran_setting_fontSize">
            <en>Name Font Size</en>
            <de>Schriftgröße der Namen</de>
            <fr>Taille de la police des noms</fr>
        </text>

        <!-- UI Elements -->
        <text name="ran_ui_title">
            <en>Animal Name Manager</en>
            <de>Tiernamen-Manager</de>
            <fr>Gestionnaire de noms d'animaux</fr>
        </text>
        <text name="ran_ui_nameLabel">
            <en>Animal Name:</en>
            <de>Tiername:</de>
            <fr>Nom de l'animal :</fr>
        </text>
        <text name="ran_ui_placeholder">
            <en>Enter name...</en>
            <de>Name eingeben...</de>
            <fr>Entrez le nom...</fr>
        </text>
        <text name="ran_button_apply">
            <en>Apply</en>
            <de>Anwenden</de>
            <fr>Appliquer</fr>
        </text>
        <text name="ran_button_reset">
            <en>Reset</en>
            <de>Zurücksetzen</de>
            <fr>Réinitialiser</fr>
        </text>
        <text name="ran_button_cancel">
            <en>Cancel</en>
            <de>Abbrechen</de>
            <fr>Annuler</fr>
        </text>

        <!-- Notifications -->
        <text name="ran_notification_loaded">
            <en>Realistic Animal Names loaded! Press K near an animal to rename it.</en>
            <de>Realistische Tiernamen geladen! Drücken Sie K in der Nähe eines Tieres, um es umzubenennen.</de>
            <fr>Noms d'Animaux Réalistes chargé ! Appuyez sur K près d'un animal pour le renommer.</fr>
        </text>
        <text name="ran_notification_noAnimal">
            <en>No animal nearby. Get closer to an animal.</en>
            <de>Kein Tier in der Nähe. Gehen Sie näher an ein Tier heran.</de>
            <fr>Aucun animal à proximité. Rapprochez-vous d'un animal.</fr>
        </text>
        <text name="ran_notification_nameSet">
            <en>Animal name set to: %s</en>
            <de>Tiername gesetzt auf: %s</de>
            <fr>Nom de l'animal défini sur : %s</fr>
        </text>
        <text name="ran_notification_nameReset">
            <en>Animal name reset</en>
            <de>Tiername zurückgesetzt</de>
            <fr>Nom de l'animal réinitialisé</fr>
        </text>

        <!-- Input -->
        <text name="input_RAN_OPEN_UI">
            <en>Open Animal Naming UI</en>
            <de>Tiernamen-UI öffnen</de>
            <fr>Ouvrir l'interface de nommage</fr>
        </text>
    </l10n>

   <!-- Source Files -->
    <extraSourceFiles>
        <sourceFile filename="src/RealisticAnimalNames.lua" />
        <sourceFile filename="gui/AnimalNamesDialog.lua" />
    </extraSourceFiles>
    
    <!-- GUI Definitions -->
    <extraGUIs>
        <gui filename="gui/AnimalNamesDialog.xml" />
    </extraGUIs>
</modDesc>