<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI>
    <!-- GUI Definition for Animal Names Dialog -->
    <!-- FS25 Realistic Animal Names - Version 2.2.0.0 -->
    
    <GuiElement type="screenElement">
        <GuiElement type="dialogElement" 
                   name="AnimalNamesDialog" 
                   profile="dialogProfile" 
                   closeOnClick="false" 
                   closeOnEsc="true">
            
            <!-- Background overlay -->
            <GuiElement type="overlayElement" 
                       name="overlay" 
                       profile="ingameMenuDialogOverlay" />
            
            <!-- Main dialog box -->
            <GuiElement type="flowLayoutElement" 
                       name="mainBox" 
                       profile="dialogBox"
                       layoutDirection="vertical">
                
                <position relative="true" x="0.5" y="0.5" />
                <size relative="false" width="500" height="auto" />
                
                <!-- Title Bar -->
                <GuiElement type="flowLayoutElement" 
                           name="titleBar" 
                           profile="dialogBoxTitleBar"
                           layoutDirection="vertical">
                    <GuiElement type="textElement" 
                               name="titleText" 
                               profile="dialogBoxTitle"
                               text="$l10n_ran_ui_title" />
                </GuiElement>
                
                <!-- Content Area -->
                <GuiElement type="flowLayoutElement" 
                           name="contentArea" 
                           profile="dialogBoxContent"
                           layoutDirection="vertical"
                           padding="20 20 20 20">
                    
                    <!-- Name Input Section -->
                    <GuiElement type="flowLayoutElement" 
                               name="inputSection" 
                               layoutDirection="vertical"
                               margin="0 0 0 15">
                        
                        <!-- Label -->
                        <GuiElement type="textElement" 
                                   name="nameLabel" 
                                   profile="dialogLabel"
                                   text="$l10n_ran_ui_nameLabel"
                                   margin="0 0 0 5" />
                        
                        <!-- Text Input -->
                        <GuiElement type="textInputElement" 
                                   name="nameInput" 
                                   profile="dialogTextInput"
                                   placeholder="$l10n_ran_ui_placeholder">
                            <size relative="false" width="400" height="40" />
                            <validCharacters value="ALL" /> <!-- UTF-8 support -->
                            <inputType value="text" />
                            <maxLength value="30" />
                        </GuiElement>
                        
                        <!-- Character counter -->
                        <GuiElement type="textElement" 
                                   name="charCounter" 
                                   profile="dialogSmallText"
                                   text="0/30"
                                   alignment="right"
                                   margin="5 0 0 0">
                            <textColor r="0.8" g="0.8" b="0.8" a="1" />
                        </GuiElement>
                    </GuiElement>
                    
                    <!-- Spacer -->
                    <GuiElement type="emptyElement" name="spacer">
                        <size relative="false" width="1" height="20" />
                    </GuiElement>
                    
                    <!-- Button Row -->
                    <GuiElement type="flowLayoutElement" 
                               name="buttonRow" 
                               layoutDirection="horizontal"
                               horizontalAlignment="center"
                               margin="0">
                        
                        <!-- Apply Button -->
                        <GuiElement type="buttonElement" 
                                   name="applyButton" 
                                   profile="buttonPrimary"
                                   text="$l10n_ran_button_apply"
                                   disabled="true"> <!-- Initially disabled -->
                            <size relative="false" width="120" height="40" />
                            <margin right="10" />
                        </GuiElement>
                        
                        <!-- Reset Button -->
                        <GuiElement type="buttonElement" 
                                   name="resetButton" 
                                   profile="buttonSecondary"
                                   text="$l10n_ran_button_reset"
                                   disabled="true">
                            <size relative="false" width="120" height="40" />
                            <margin right="10" />
                        </GuiElement>
                        
                        <!-- Cancel Button -->
                        <GuiElement type="buttonElement" 
                                   name="cancelButton" 
                                   profile="buttonSecondary"
                                   text="$l10n_ran_button_cancel">
                            <size relative="false" width="120" height="40" />
                        </GuiElement>
                    </GuiElement>
                    
                    <!-- Keyboard hint -->
                    <GuiElement type="textElement" 
                               name="keyboardHint" 
                               profile="dialogHintText"
                               text="Enter = Apply â€¢ Esc = Cancel"
                               margin="15 0 0 0">
                        <size relative="false" width="auto" height="20" />
                        <textColor r="0.6" g="0.6" b="0.6" a="1" />
                    </GuiElement>
                    
                </GuiElement>
                
            </GuiElement>
            
        </GuiElement>
    </GuiElement>
</GUI>