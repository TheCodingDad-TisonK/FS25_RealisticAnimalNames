<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI>
    <!-- GUI Definition for Animal Names Dialog -->
    
    <GuiElement type="screenElement">
        <GuiElement type="dialogElement" name="AnimalNamesDialog" 
                   profile="dialogProfile" 
                   closeOnClick="false" 
                   closeOnEsc="true">
            
            <!-- Background overlay (dims the screen) -->
            <GuiElement type="overlayElement" name="overlay" 
                       profile="ingameMenuDialogOverlay" />
            
            <!-- Main dialog box -->
            <GuiElement type="flowLayoutElement" name="mainBox" 
                       profile="dialogBox"
                       layoutDirection="vertical">
                
                <!-- Title Bar -->
                <GuiElement type="flowLayoutElement" name="titleBar" 
                           profile="dialogBoxTitleBar"
                           layoutDirection="vertical">
                    <GuiElement type="textElement" name="titleText" 
                               profile="dialogBoxTitle"
                               text="$l10n_ran_ui_title" />
                </GuiElement>
                
                <!-- Content Area -->
                <GuiElement type="flowLayoutElement" name="contentArea" 
                           profile="dialogBoxContent"
                           layoutDirection="vertical">
                    
                    <!-- Name Input Section -->
                    <GuiElement type="flowLayoutElement" name="inputSection" 
                               layoutDirection="vertical"
                               margin="0 0 0 15">
                        
                        <!-- Label -->
                        <GuiElement type="textElement" name="nameLabel" 
                                   profile="dialogLabel"
                                   text="$l10n_ran_ui_nameLabel"
                                   margin="0 0 0 5" />
                        
                        <!-- Text Input -->
                        <GuiElement type="textInputElement" name="nameInput" 
                                   profile="dialogTextInput"
                                   placeholder="$l10n_ran_ui_placeholder"
                                   maxCharacters="30">
                            <size relative="false" width="400" height="40" />
                        </GuiElement>
                    </GuiElement>
                    
                    <!-- Spacer -->
                    <GuiElement type="emptyElement" name="spacer">
                        <size relative="false" width="1" height="20" />
                    </GuiElement>
                    
                    <!-- Button Row -->
                    <GuiElement type="flowLayoutElement" name="buttonRow" 
                               layoutDirection="horizontal"
                               margin="0">
                        
                        <!-- Apply Button (Primary) -->
                        <GuiElement type="buttonElement" name="applyButton" 
                                   profile="buttonPrimary"
                                   text="$l10n_ran_button_apply">
                            <size relative="false" width="120" height="40" />
                        </GuiElement>
                        
                        <!-- Reset Button -->
                        <GuiElement type="buttonElement" name="resetButton" 
                                   profile="buttonSecondary"
                                   text="$l10n_ran_button_reset">
                            <size relative="false" width="120" height="40" />
                            <position relative="false" x="10" y="0" />
                        </GuiElement>
                        
                        <!-- Cancel Button -->
                        <GuiElement type="buttonElement" name="cancelButton" 
                                   profile="buttonSecondary"
                                   text="$l10n_ran_button_cancel">
                            <size relative="false" width="120" height="40" />
                            <position relative="false" x="10" y="0" />
                        </GuiElement>
                    </GuiElement>
                    
                </GuiElement>
                
            </GuiElement>
            
        </GuiElement>
    </GuiElement>
</GUI>